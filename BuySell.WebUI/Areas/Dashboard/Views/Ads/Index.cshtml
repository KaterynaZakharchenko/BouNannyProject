@model IEnumerable<BouNanny.Models.Ad>

@{
    ViewBag.Title = "Recent Ads";
}

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading"><h4>Recent Ads</h4></div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>
                @Html.Label("Client Name")
            </th>
            <th>
                @Html.Label("Ad Title")
            </th>
            <th>
                @Html.Label("Price")
            </th>
            <th>
                @Html.Label("Posting Time")
            </th>
            <th>
                @Html.Label("Location")
            </th>
            <th>
                @Html.Label("Reviews")
            </th>
            <th>
                @Html.Label("Control")
            </th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink(item.Client.Name, "Details", "Profile", new { area = "", id = item.Client.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.ActionLink(item.Title, "Details", "Ads", new { area = "", id = item.ID }, new { target = "_blank" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostingTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.Name), @Html.DisplayFor(modelItem => item.State.Name), @Html.DisplayFor(modelItem => item.Country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Reviews.Count)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id=item.ID })
                </td>
            </tr>
           }
    </table>
</div>
